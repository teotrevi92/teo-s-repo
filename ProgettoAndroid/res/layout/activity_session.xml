<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.progettoandroid.Session_Activity" >

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|top"
        android:text="@string/cron"
        android:textColor="#000000"
        android:textSize="140sp" />

    <ImageButton
        android:id="@+id/play2"
        style="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:adjustViewBounds="true"
        android:background="@drawable/play"
        android:contentDescription="@string/play"
        android:src="@drawable/play"
		android:visibility="invisible" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play2"
        android:layout_toEndOf="@+id/pause"
        android:layout_toRightOf="@+id/play2"
        android:background="@drawable/stop"
        android:contentDescription="@string/stop"
        android:src="@drawable/stop"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play2"
        android:layout_alignStart="@+id/play2"
        android:layout_alignTop="@+id/play2"
        android:adjustViewBounds="true"
        android:background="@drawable/pause"
        android:contentDescription="@string/pause"
        android:src="@drawable/pause" />

</RelativeLayout>